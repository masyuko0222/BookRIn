{
  "name": "app",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.2",
    "globals": "^15.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3"
  },
  "scripts": {
    "lint": "run-p lint:*",
    "lint:eslint": "eslint 'app/javascript/**/*.{js,jsx,vue}' --max-warnings=0",
    "lint:prettier": "prettier app/javascript/**/*.{js,jsx,vue} --check",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.js=jsx",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "watch": "esbuild app/javascript/*.* --watch --bundle --outdir=app/assets/builds --loader:.js=jsx"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.44",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.10"
  }
}
